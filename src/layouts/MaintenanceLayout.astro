---
// src/layouts/MaintenanceLayout.astro
import type { Props } from '@astrojs/starlight/props';

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} - Under Maintenance</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen bg-gray-100">

    <!-- Header -->
    <header class="p-4 sm:p-6 border-b bg-white">
        <div class="max-w-7xl mx-auto">
            <a href="/" class="text-xl font-bold text-gray-800 font-serif">
                Chinese SDG Institute
            </a>
        </div>
    </header>

    <!-- Main Content -->
    <main class="p-4 lg:p-8">
        <div class="min-h-[70vh] flex items-center justify-center">
            <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-md border text-center">
                <h1 class="text-3xl font-bold text-gray-800 mb-6">{title}</h1>
                <p class="text-gray-600">This page is currently under maintenance. We'll be back soon!</p>
            </div>
        </div>
    </main>

</body>
</html>
