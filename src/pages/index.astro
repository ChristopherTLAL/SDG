---
import MainLayout from '../layouts/MainLayout.astro';
import PostCard from '../components/PostCard.astro';
import Hero from '../components/Hero.astro';
import { getHomepageData } from '../lib/sanity/queries';

const { topStories, categoryPosts, categories } = await getHomepageData();
const heroPost = topStories[0];
const remainingTopStories = topStories.slice(1);
---

<MainLayout title="Chinese SDG Institute" description="Promoting sustainable development goals through research and action.">
  <Hero post={heroPost} slot="hero" />

  <div id="content" class="site-content flex-grow site-content--home">
    <div class="entry-content">
      {remainingTopStories?.length > 0 && (
        <section class="top-stories mb-12">
          <h2 class="text-4xl font-bold mb-6 text-center">Top Stories</h2>
          <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <div class="lg:col-span-2">
              {remainingTopStories[0] && <PostCard post={remainingTopStories[0]} size="large" />}
            </div>
            <div class="flex flex-col justify-between h-full gap-8">
              {remainingTopStories.slice(1, 4).map(post => (
                post && <div class="flex-1"><PostCard post={post} size="small-horizontal" /></div>
              ))}
            </div>
          </div>
        </section>
      )}

      {categories.map(category => {
        const posts = categoryPosts[category.slug];
        return posts?.length > 0 && (
          <section class={`category-${category.slug} mb-12`}>
            <h2 class="text-3xl font-bold mb-6 flex items-center">
              <a href={`/category/${category.slug}`} class="hover:text-purple transition-colors">{category.title}</a>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
              {posts.map(post => (
                post && <PostCard post={post} size="medium" />
              ))}
            </div>
          </section>
        )
      })}
    </div>
  </div>
</MainLayout>