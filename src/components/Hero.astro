---
import { urlFor } from '../lib/sanity/image';
const { post } = Astro.props;
---
<div class="hero-article__wrapper h-[40vh]">
  <div class="hero-article h-full">
    <a
      class="hero-article__link h-full"
      href={`/post/${post.slug}`}
    >
      <img
        class="hero-article__image md:!hidden h-full w-full object-cover"
        src={urlFor(post.mainImage).width(1000).height(1000).url()}
        alt={post.title}
        width="1000"
        height="1000"
        loading="eager"
      />
      <img
        class="hero-article__image !hidden md:!block h-full w-full object-cover"
        src={urlFor(post.mainImage).width(2000).height(1000).url()}
        alt={post.title}
        width="2000"
        height="1000"
        loading="eager"
      />
      <div class="absolute inset-x-0 bottom-0 z-10 bg-gradient-to-t from-black/70 to-transparent">
        <div class="container mx-auto px-4 xl:max-w-6xl xl:pb-10">
          <h1 class="text-white text-4xl xl:text-6xl font-bold leading-tight pt-12 pb-4">
            {post.title}
          </h1>
          <div class="text-white/80 text-lg">
            {post.author?.name}
          </div>
        </div>
      </div>
    </a>
  </div>
</div>