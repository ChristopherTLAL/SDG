---
import { urlForImage } from '../lib/sanity/image';
const { post } = Astro.props;
---
<div class="hero-article__wrapper h-[60vh] overflow-hidden relative">
  <div class="hero-article h-full">
    <a
      class="hero-article__link h-full group"
      href={`/post/${post.slug}`}
    >
  {post.mainImage && (
    <>
      <img
        class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 object-cover w-full h-full transform transition-transform duration-500 group-hover:scale-105"
        src={urlForImage(post.mainImage).width(1240).height(540).url()}
        alt={post.title}
      />
      <img
        class="hero-article__image !hidden md:!block absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 h-full w-full object-cover transform transition-transform duration-500 group-hover:scale-105"
        src={urlForImage(post.mainImage).width(2000).height(1000).url()}
        alt={post.title}
        width="2000"
        height="1000"
        loading="eager"
      />
    </>
  )}
      <div class="absolute inset-x-0 bottom-0 z-10 bg-black/30 w-full h-full flex items-end transition-opacity duration-500 group-hover:opacity-0">
        <div class="container mx-auto px-4 xl:max-w-6xl xl:pb-10">
          <h1 class="text-white text-3xl xl:text-5xl font-bold leading-tight pt-12 pb-4 transition-colors duration-500 drop-shadow-lg">
            {post.title}
          </h1>
          <div class="text-white/80 text-lg">
            {post.author?.name}
          </div>
        </div>
      </div>
      {/* A separate div for the hover-state title to ensure it has a shadow */}
      <div class="absolute inset-x-0 bottom-0 z-10 w-full h-full flex items-end opacity-0 transition-opacity duration-500 group-hover:opacity-100">
        <div class="container mx-auto px-4 xl:max-w-6xl xl:pb-10">
          <h1 class="text-white text-3xl xl:text-5xl font-bold leading-tight pt-12 pb-4 hero-title-shadow">
            {post.title}
          </h1>
          <div class="text-white/80 text-lg hero-title-shadow">
            {post.author?.name}
          </div>
        </div>
      </div>
    </a>
  </div>
</div>